{
  "compilerOptions": {
    "target": "ES3",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "sourceMap": true,
    "removeComments": true,
    "ignoreDeprecations": "5.0"
  },
  "exclude": [
    "server/node_modules",
    "server/dist"
  ]
}